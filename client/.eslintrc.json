{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"overrides": [],
	"rules": {
		"no-undef": "warn",
		"comma-dangle": "warn",
		"brace-style": "error",
		"comma-spacing": "error",
		"array-bracket-spacing": "error",
		"no-mixed-spaces-and-tabs": "error",
		"no-duplicate-imports": "error",
		"no-console": "warn",
		"indent": ["error", "tab"],
		"semi": ["error", "always"],
		"react/prop-types": "warn"
	} 
}
