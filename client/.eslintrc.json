{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-undef":"error",
        "no-underscore-dangle": "error",
        "comma-dangle":"error",
        "brace-style":"error",
        "comma-spacing": "error",
        "array-bracket-spacing": "error",
        "object-curly-spacing": "error",
        "no-mixed-spaces-and-tabs": "error",
        "sort-imports": "error",
        "no-console": "warn",         
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
